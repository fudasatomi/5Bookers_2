<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "profile-thumb", fallback: "no_image.jpg" %>
<table class="table">
	<tr>
		<th class="user-th">name</th>
		<th><%= user.name %></th>
	</tr>
	<tr>
		<th class="user-th">introduction</th>
		<th><%= user.introduction %></th>
	</tr>
</table>
<div class="row">
	<% if user == current_user %>
		<%= link_to edit_user_path(current_user) do %><button type="button" class="btn btn-default btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button><% end %>
	<% else %>
		<%= link_to user_path(current_user) do %><button type="button" class="btn btn-default btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button><% end %>
	<% end %>

</div>
<h2>New book</h2>
<%= form_for(book) do |f| %>
<div class="row form">
<label>Title</label>
<%= f.text_field :title , :class => "col-xs-12" %>
</div>
<div class="row form">
<label>Opinion</label>
<%= f.text_area :body, :class => "col-xs-12" %>
</div>
<div class="row form">
<%= f.submit 'Create Book',  :class => "btn btn-primary col-xs-12"%></div>
<% end %>