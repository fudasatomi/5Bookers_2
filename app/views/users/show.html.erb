<%= render 'home/header' %>
<div class="container contents">
	<%= render 'books/success' %>
	<div class="row">
		<div class="col-xs-3">
			<%=  render'users/sidebar', user: @user , book:@book %>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
	<tr>
		<th class="th-image"></th>
		<th class="th-title">Title</th>
		<th class="th-opinion">body</th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "profile-thumb", fallback: "no_image.jpg" %></td>
		<td><%= link_to book_path(book) do %><%= book.title %><% end %></td>
		<td><%= book.body %></td>

	</tr>
	<% end %>

</table>
		</div>
	</div>
</div>

<%= render 'home/footer' %>