<%= render 'home/header' %>

<div class="container contents">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "profile-thumb", fallback: "no_image.jpg" %>
			<table class="table">
				<tr>
					<th class="user-th">name</th>
					<th><%= @user.name %></th>
				</tr>
				<tr>
					<th class="user-th">introduction</th>
					<th><%= @user.introduction %></th>
				</tr>
			</table>
			<div class="row">
				<%= link_to edit_user_path(current_user) do %><button type="button" class="btn btn-default btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button><% end %>
			</div>
			<h2>New book</h2>
			<%= form_for(@book) do |f| %>
			<h5>Title</h5>
			<%= f.text_field :title %>
			<h5>Opinion</h5>
			<%= f.text_area :body %>
			<div class="submit"><%= f.submit 'Create Book' %></div>

			<% end %>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<tr>
					<th class="th-image"></th>
					<th class="th-title">Title</th>
					<th class="th-opinion">Opinion</th>
				</tr>
				<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "profile-thumb", fallback: "no_image.jpg" %> </td>
					<td><%= link_to book_path(book) do %><%= book.title %><% end %></td>
					<td><%= book.body %></td>

				</tr>
				<% end %>

			</table>
		</div>
	</div>
</div>
<%= render 'home/footer' %>