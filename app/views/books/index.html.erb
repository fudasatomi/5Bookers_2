<%= render 'home/header' %>
<div class="container contents">
<!-- サクセスメッセージ -->
	<% if flash[:notice] %>
	<span class="message"><%= notice %></span>
	<% end %>
<!-- サクセスメッセージ -->
<!-- bookcreateエラーメッセージ -->
<% if @book.errors.any? %>
<div id="error_explanation">
	<h4><%= @book.errors.count %>error prohibited this obj from being saved:</h4>
	　<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>
<!-- エラーメッセージ -->
	<div class="row">
		<div class="col-xs-3">
			<%=  render'users/sidebar', user: @user , book:@book %>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<tr>
					<th class="th-image"></th>
					<th class="th-title">Title</th>
					<th class="th-opinion">Opinion</th>
				</tr>
				<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "profile-thumb", fallback: "no_image.jpg" %> </td>
					<td><%= link_to book_path(book) do %><%= book.title %><% end %></td>
					<td><%= book.body %></td>

				</tr>
				<% end %>

			</table>
		</div>
	</div>
</div>
<%= render 'home/footer' %>