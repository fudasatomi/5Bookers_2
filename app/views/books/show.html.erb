<%= render 'home/header' %>
<div class="container contents">
    <%= render 'books/success' %>
	<div class="row">
		<div class="col-xs-3">
			<%=  render'users/sidebar', user: @user , book:@book %>
		</div>
		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table">
				<tr>
					<td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "profile-thumb", fallback: "no_image.jpg" %>
						<p><%= link_to user_path(@user) do %><%= @user.name %><% end %></p>
					</td>
					<td><%= @bookdetail.title %></td>
					<td><%= @bookdetail.body %></td>
					<td><%= link_to 'Edit', edit_book_path(@bookdetail) %></td>
					<td><%= link_to 'Destroy', book_path(@bookdetail), method: :delete,data: {confirm: "本当に消しますか？"} %></td>

				</tr>
			</table>
		</div>
	</div>
</div>
<%= render 'home/footer' %>