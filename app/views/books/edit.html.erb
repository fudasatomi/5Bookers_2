<%= render 'home/header' %>

<div class="container contents">
<div class="row">
	<div class="col-md-6 col-md-offset-3">
<h1>Editing Book</h1>

	<%= render 'books/errorbook', book: @book %>

<%= form_for(@book) do |f| %>
<div class="row form">
<label>Title</label>
<%= f.text_field :title, :class => "col-xs-12"%>
</div>
<div class="row form">
<label>Opinion</label>
<%= f.text_area :body, :class => "col-xs-12"%>
</div>

<div class="row form">
	<%= f.submit 'Update Book', :class => "btn btn-primary col-xs-12" %>
</div>

<% end %>

<h5><%= link_to 'Show', book_path(@book) %> | <%= link_to 'Back', books_path %></h5>

</div>
</div>
</div>
<%= render 'home/footer' %>