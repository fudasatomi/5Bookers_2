<%= f.text_area :body %>

<div class="submit"><%= f.submit 'Update Book' %></div>

<% end %>

<h5><%= link_to 'Show', book_path(@book) %> | <%= link_to 'Back', books_path %></h5>

</div>
<%= render 'home/footer' %>