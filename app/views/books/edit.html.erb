<%= render 'home/header' %>

<div class="container contents">
<h2>Editing Book</h2>
<!-- books/editエラーメッセージ -->
<% if @book.errors.any? %>
<div id="error_explanation">
	<h4><%= @book.errors.count %>error prohibited this obj from being saved:</h4>
	　<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>
<!-- エラーメッセージ -->
<%= form_for(@book) do |f| %>
<h5>Title</h5>
<%= f.text_field :title %>

